@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap4/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" asp-append-version="true" />

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/layer/layer.js"></script>
    <script src="~/lib/bootstrap4/bootstrap.js"></script>
    <script src="~/lib/jsencrypt/jsencrypt.js"></script>
    <script src="~/lib/jquery/jquery.cookie.js"></script>
    <script src="~/lib/MD5/md5.js"></script>
    <script src="~/js/Login.js" asp-append-version="true"></script>
    <script src="~/js/Common/common.js" asp-append-version="true"></script>

</head>
<body>


    <div id="carousel_photo" class=" carousel slide ">
        <!-- 轮播图片 -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/Login/1.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Login/2.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Login/3.jpg">
            </div>
        </div>
    </div>

    <div class="carousel-indicators ">
        <div class="container-fluid">
            <div class="row  row-centered justify-content-md-center" style="width:100%">
                <form id="form1" class="col-8 ">
                    <div class="form-group ">
                        <input id="UserName" name="UserName" class="form-control-lg col-5 input" placeholder="username" autocomplete="off" />
                    </div>
                    <div class="form-group ">
                        <input id="PassWord" name="PassWord" type="password" class="form-control-lg col-5 input" placeholder="password" />
                    </div>
                    <div class="form-group ">
                        <input class="form-control btn btn-info btn-lg col-5" value="登录" onclick="DoLogin.DoLogin()" />
                    </div>
                    <div class="form-group ">
                        <input id="rsaPublicKey" type="hidden" value="@ViewData["rsaPublicKey"]" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>

