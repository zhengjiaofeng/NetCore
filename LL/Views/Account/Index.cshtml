@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap4/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" asp-append-version="true" />

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap4/bootstrap.js"></script>
    <script src="~/js/Login.js" asp-append-version="true"></script>

</head>
<body>

    <div id="carousel_photo" class=" carousel slide ">
        <!-- 轮播图片 -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/Login/1.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Login/2.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Login/3.jpg">
            </div>
        </div>
    </div>

    <div class="carousel-indicators">
        <div class="row  row-centered">
            <form id="form1" action="/Account/Login" method="post">
                <div class="form-group">
                    <input name="UserName" class="form-control" placeholder="username" />
                </div>
                <div class="form-group">
                    <input name="PassWord" type="password" class="form-control" placeholder="password" />
                </div>
                <div class="form-group">
                    <input type="submit" class="form-control btn btn-info" value="登录" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>

